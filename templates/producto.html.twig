{% extends "base.html.twig" %}

{% block title %}Productos - Tienda de Videojuegos{% endblock %}

{% block body %}
<div class="container mt-5">
    {% if categoria %}
        <h1>Productos - {{ categoria.nombre }}</h1>
    {% else %}
        <h1>Todos los Productos</h1>
    {% endif %}
    
    <div class="row mt-4">
        {% for producto in productos %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ producto.nombre }}</h5>
                        <p class="card-text">{{ producto.descripcion | default('Sin descripción') }}</p>
                        <p class="card-text">
                            <strong>Precio: {{ producto.precio }}€</strong>
                        </p>
                        <p class="card-text">
                            Stock: {{ producto.stock }}
                        </p>
                        <a href="{{ path('categorias') }}" class="btn btn-secondary">
                            Volver
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p>No hay productos disponibles</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
