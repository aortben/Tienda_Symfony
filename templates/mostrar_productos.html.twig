{extends 'base.html.twig'}

{% block title %}Detalles del Producto{% endblock %}

{% block body %}
    <h1>Detalles del Producto</h1>

    <div class="producto-detalles">
        <h2>{{ producto.nombre }}</h2>
        <p><strong>Precio:</strong> {{ producto.precio | number_format(2, ',', '.') }} €</p>
        <p><strong>Descripción:</strong> {{ producto.descripcion }}</p>
        <p><strong>Categoría:</strong> {{ producto.categoria.nombre }}</p>

        <form action="{{ path('añadir_a_cesta', {'id': producto.id}) }}" method="post">
            <label for="cantidad">Cantidad:</label>
            <input type="number" id="cantidad" name="cantidad" value="1" min="1">
            <button type="submit">Añadir a la cesta</button>
        </form>
    </div>

    <a href="{{ path('lista_productos') }}">Volver a la lista de productos</a>
{% endblock %}
