{% extends 'base.html.twig' %}

{% block title %}Productos - Tienda{% endblock %}

{% block body %}
<div class="container my-5">
    
    {# Encabezado con navegación (Migas de pan) #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-6 fw-bold text-primary">Listado de Productos</h1>
            <p class="text-muted">Selecciona las unidades que quieras y pulsa "Añadir al Carrito" al final.</p>
        </div>
        <a href="{{ path('categorias') }}" class="btn btn-outline-secondary">
            &larr; Volver a Categorías
        </a>
    </div>

    {# Formulario global para añadir múltiples productos #}
    <form method="post" action="{{ path('anadir') }}">
        <input type="hidden" name="categoria_id" value="{{ categoria_id }}">
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 50%;">Producto</th>
                                <th style="width: 20%;">Precio</th>
                                <th style="width: 30%;">Unidades</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for producto in productos %}
                                <tr>
                                    {# Nombre con enlace a detalles #}
                                    <td>
                                        <a href="{{ path('detalles', {'id': producto.getId()}) }}" class="text-decoration-none fw-bold">
                                            {{ producto.getNombre() }}
                                        </a>
                                    </td>
                                    
                                    {# Precio formateado #}
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            {{ producto.getPrecio()|number_format(2, ',', '.') }} €
                                        </span>
                                    </td>
                                    
                                    {# Input de Unidades #}
                                    <td>
                                        <div class="input-group input-group-sm" style="max-width: 150px;">
                                            <input type="number" 
                                                   name="unidades[]" 
                                                   value="0" 
                                                   min="0" 
                                                   class="form-control text-center"
                                                   placeholder="0">
                                            <span class="input-group-text">uds.</span>
                                        </div>

                                        {# ID oculto necesario para el array del controlador #}
                                        <input type="hidden" name="productos_id[]" value="{{ producto.getId() }}">
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="text-center py-4">
                                        <span class="text-muted">No hay productos en esta categoría.</span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {# Botón de Acción (Sticky bottom bar para que siempre se vea) #}
        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4 p-3 bg-light rounded border sticky-bottom">
            <button type="submit" class="btn btn-success btn-lg px-5 shadow">
                Añadir Seleccionados al Carrito
            </button>
        </div>
    </form>
</div>

{# Estilo extra para el botón pegajoso #}
<style>
    .sticky-bottom {
        position: sticky;
        bottom: 20px;
        z-index: 100;
        backdrop-filter: blur(5px);
        background-color: rgba(248, 249, 250, 0.9) !important;
    }
</style>
{% endblock %}