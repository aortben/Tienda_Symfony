{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="h3 mb-4 font-weight-normal text-center">Registro de Usuario</h1>

            {{ form_start(registrationForm) }}

                <div class="mb-3">
                    {{ form_row(registrationForm.login) }}
                </div>

                <div class="mb-3">
                    {{ form_row(registrationForm.email) }}
                </div>

                <div class="mb-3">
                    {{ form_row(registrationForm.phone) }}
                </div>

                <div class="mb-3">
                    {{ form_row(registrationForm.plainPassword) }}
                </div>

                <div class="mb-3 form-check">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    {{ form_label(registrationForm.agreeTerms, 'Acepto los términos y condiciones', {'label_attr': {'class': 'form-check-label'}}) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">Registrarse</button>
                    <a href="{{ path('app_login') }}" class="btn btn-outline-secondary">¿Ya tienes cuenta?</a>
                </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}