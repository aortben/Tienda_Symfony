{% extends 'base.html.twig' %}

{% block title %}Categorías{% endblock %}

{% block body %}
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_home') }}">Mi Tienda de Juegos</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home') }}">Inicio</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" href="{{ path('app_categorias') }}">Categorías</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    <h1 class="text-center mb-4">Categorías de videojuegos</h1>

    <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
        {% for categoria in categorias %}
            <div class="col">
                <div class="card h-100 text-center shadow-sm" style="cursor:pointer;" 
                     onclick="window.location.href='{{ path('app_productos_por_categoria', {'id': categoria.id}) }}'">
                    <div class="card-body">
                        <h5 class="card-title">{{ categoria.categoria }}</h5>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-center">No hay categorías todavía.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}



