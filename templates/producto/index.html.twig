{% extends 'base.html.twig' %}

{% block title %}Productos{% endblock %}

{% block body %}
    {% if categoria is defined %}
        <h1 style="text-align: center; margin-bottom: 2rem;">Productos en la categoría "{{ categoria.categoria }}"</h1>
    {% else %}
        <h1 style="text-align: center; margin-bottom: 2rem;">Todos los productos</h1>
    {% endif %}

    {% if productos|length > 0 %}
        <div style="display: flex; flex-wrap: wrap; gap: 1rem; justify-content: center;">
            {% for producto in productos %}
                <div style="
                    background-color: #f9f9f9;
                    border-radius: 8px;
                    padding: 1rem 1.5rem;
                    min-width: 180px;
                    max-width: 250px;
                    text-align: center;
                    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
                    transition: transform 0.2s, box-shadow 0.2s;
                "
                onmouseover="this.style.transform='scale(1.05)'; this.style.boxShadow='0 4px 12px rgba(0,0,0,0.25)';"
                onmouseout="this.style.transform='scale(1)'; this.style.boxShadow='0 2px 6px rgba(0,0,0,0.1)';"
                >
                    <h3 style="margin-bottom: 0.5rem;">{{ producto.name }}</h3>
                    <p style="margin: 0.25rem 0;"><strong>{{ producto.price }} €</strong></p>
                    {% if producto.categoria is defined %}
                        <p style="font-size: 0.9rem; color: #666;">{{ producto.categoria.categoria }}</p>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p style="text-align: center;">No hay productos disponibles.</p>
    {% endif %}

    <div style="text-align: center; margin-top: 2rem;">
        <a href="{{ path('app_categorias') }}" style="
            text-decoration: none;
            color: #fff;
            background-color: #007bff;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            transition: background-color 0.2s;
        "
        onmouseover="this.style.backgroundColor='#0056b3';"
        onmouseout="this.style.backgroundColor='#007bff';"
        >← Volver a categorías</a>
    </div>
{% endblock %}



