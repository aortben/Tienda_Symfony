{% extends 'base.html.twig' %}

{% block title %}Historial de Pedidos{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 fw-bold text-primary">Historial de Compras</h1>
        <a href="{{ path('categorias') }}" class="btn btn-outline-secondary">
            Volver a la tienda
        </a>
    </div>

    {% if pedidos is empty %}
        <div class="alert alert-info shadow-sm border-0 py-4 text-center">
            <h4 class="alert-heading fw-bold">Aún no has realizado ninguna compra</h4>
            <p class="mb-0">¡Explora nuestro catálogo y haz tu primer pedido hoy mismo!</p>
            <div class="mt-3">
                <a href="{{ path('categorias') }}" class="btn btn-primary">Ir al Catálogo</a>
            </div>
        </div>
    {% else %}
        <div class="accordion shadow-sm" id="accordionPedidos">
            {% for pedido in pedidos %}
                <div class="accordion-item border-0 border-bottom">
                    <h2 class="accordion-header" id="heading{{ pedido.id }}">
                        <button class="accordion-button collapsed fw-bold" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ pedido.id }}">
                            <span class="me-3 text-primary">Pedido #{{ pedido.id }}</span>
                            <span class="text-muted fw-normal me-3">{{ pedido.fecha|date('d/m/Y H:i') }}</span>
                            <span class="badge bg-success rounded-pill">{{ pedido.coste|number_format(2, ',', '.') }} €</span>
                        </button>
                    </h2>
                    <div id="collapse{{ pedido.id }}" class="accordion-collapse collapse" data-bs-parent="#accordionPedidos">
                        <div class="accordion-body bg-light">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table table-hover mb-0">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th>Producto</th>
                                                    <th class="text-center">Unidades</th>
                                                    <th class="text-end">Precio Ud.</th>
                                                    <th class="text-end">Subtotal</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for linea in pedido.pedidoProductos %}
                                                    <tr>
                                                        <td class="fw-bold">{{ linea.producto.nombre }}</td>
                                                        <td class="text-center">{{ linea.unidades }}</td>
                                                        <td class="text-end">{{ linea.producto.precio|number_format(2, ',', '.') }} €</td>
                                                        <td class="text-end fw-bold text-primary">
                                                            {{ (linea.unidades * linea.producto.precio)|number_format(2, ',', '.') }} €
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}